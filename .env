# AWS Wrangler Demo Configuration
# Set these values to match your CloudFormation stack outputs

# Environment for resource naming (dev, test, prod, demo)
export ENVIRONMENT="demo"

# Base S3 bucket name - MUST be globally unique across all AWS accounts
# Suggestion: use your name/company + date (e.g., "myname-wrangler-20241201")
export S3_BUCKET_BASE="<your-unique-bucket-base>"

# S3 bucket name with environment suffix (used by demos and CloudFormation)
export S3_BUCKET_NAME="${S3_BUCKET_BASE}-${ENVIRONMENT}"

# DynamoDB table name for movie data
export DYNAMODB_TABLE_NAME="movies-demo"

# Glue database name for data catalog
export GLUE_DATABASE_NAME="movielens-demo"

# Athena result location (uses S3_BUCKET_NAME variable)
export ATHENA_RESULT_LOCATION="s3://${S3_BUCKET_NAME}/athena-results/"

# To use this file, run: source .env